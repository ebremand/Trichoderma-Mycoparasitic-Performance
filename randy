# TE_analysis
conda create -n TE_analysis python=3.9
conda activate TE_analysis

conda install -c bioconda repeatmodeler repeatmasker cdhit pfam_scan ncbi-blast
conda install -c bioconda repeatmodeler  
conda install -c bioconda repeatmasker  
conda install -c bioconda pfam_scan 

wget https://github.com/Benson-Genomics-Lab/TRF/releases/download/v4.09.1/trf409.linux64
chmod +x trf409.linux64

mv trf409.linux64 /usr/local/bin/irf
cd /path/to/repeatmasker
./configure

wget ftp://ftp.ebi.ac.uk/pub/databases/Pfam/releases/Pfam33.1/Pfam-A.hmm.gz
gunzip Pfam-A.hmm.gz
hmmpress Pfam-A.hmm

wget ftp://ftp.ncbi.nih.gov/pub/mmdb/cdd/little_endian/Cdd_LE.tar.gz
tar -xzvf Cdd_LE.tar.gz -C /path/to/cdd_database

export PATH=$PATH:/usr/local/bin/irf
export PATH=$PATH:/path/to/repeatmasker
export PFAM_DB=/path/to/Pfam-A.hmm
export CDD_DB=/path/to/cdd_database


